	    self.hasWeapon = true
	    else
	        --printf("car <fire>: car hasn't weapon.")
	        self.hasWeapon = false
	    end

	    if loading then
		    self.speed = utils.load_var(self.object, "speed") or def_moving_speed
		    self.loop = utils.load_var(self.object, "loop") or false
		    self.min_delta_per_sec = utils.load_var(self.object, "min_delta_per_sec") or def_min_delta_per_sec
		    self.min_car_explode_time = utils.load_var(self.object, "min_car_explode_time") or def_min_car_explode_time
