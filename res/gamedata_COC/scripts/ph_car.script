function action_car:save()
    --printf("car <state>: saving")
    if self.usable == nil then
	    utils.save_var(self.object, "speed", self.speed)
	    utils.save_var(self.object, "loop", self.loop)
	    utils.save_var(self.object, "min_delta_per_sec", self.min_delta_per_sec)
	    utils.save_var(self.object, "min_car_explode_time", self.min_car_explode_time)
	    utils.save_var(self.object, "state_moving", self.state_moving)
	    utils.save_var(self.object, "target_walk_pt", self.target_walk_pt) -- or -2)
	    --printf("car <save>: target_walk_pt(%s)", self.target_walk_pt)
	end
end

