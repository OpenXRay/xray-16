fire_trace_width		= 1.0
rpm                     = 750
hit_power               = 0.75
hit_impulse		 		= 25
fire_distance           = 500
bullet_speed			= 900			;начальная скорость пули
light_color				= 0.9,0.8,0.4
light_range				= 5
light_var_color			= 0.05
light_var_range			= 0.5
light_time 				= 0.2
