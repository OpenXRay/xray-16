[logic]
active = sr_idle@introduce

[sr_idle@introduce]
on_info = {+bar_arena_start} sr_idle@idle

[sr_idle@idle]
on_info = {+bar_arena_monstr_ready} sr_idle@10 %=bar_arena_fight_begin +bar_arena_start_introduce%

