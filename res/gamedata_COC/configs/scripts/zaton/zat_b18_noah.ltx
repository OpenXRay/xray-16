on_actor_dist_ge_nvis = 100 | walker@meet %+zat_b18_reset_memory -zat_b18_actor_enemy -zat_b18_noah_shot_door -zat_b18_noah_remembers -zat_b18_noah_breakdown =actor_neutral =restore_health%
