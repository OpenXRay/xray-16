[main]
enable = true
allow_simulation_squads_as_companions = true		; If true then simulation squads (non-story) will be allowed to join the player as a companion. If false player can't ask anyone to join him except task scenarios
allow_only_friends_as_companions = true				; Allow friends (green) to be a companion
max_actor_squad_size = 3							; How many NPCs the actor can have as companions (NPC Squad size is taken into account so if < 3 that means actor can only take a squad with 1 or less npc)
max_actor_squad_size_patriarch = 5					; Same as above, but if the 'Patriarch' achievement has been unlocked.
