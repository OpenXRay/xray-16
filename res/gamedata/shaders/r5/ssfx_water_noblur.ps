#include "screenspace_common.h"

Texture2D water_buffer;

uniform float4 blur_setup;

float4 main ( p_screen I ) : SV_Target
{
	float2 tc = I.tc0.xy * blur_setup.w;
	return float4(water_buffer.SampleLevel(smp_linear, tc, 0).rgb, 1);
}