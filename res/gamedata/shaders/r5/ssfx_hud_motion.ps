#include "ssfx_skin_hud.h"

float4 main(v2p_hud I) : SV_Target
{
	// Position
	float2 pos_a = (I.PC.xy / I.PC.w);
	float2 pos_b = (I.PP.xy / I.PP.w);

	float2 uv_rp = ( pos_a - pos_b );
	
	return	float4( 0, uv_rp.xy, 0);
}
