    float occ = float(calc_hbao(P.z, N.xyz, I.tc0.xy, I.pos2d));
#else // USE_HBAO
	float occ = calc_ssao( CS_P(P.xyz, N.xyz, I.tc0.xy, I.tcJ, I.pos2d, ISAMPLE ) );
#endif
#endif // USE_HDAO
	
	hmodel	(hdiffuse, hspecular, mtl, N.w, D.w, P.xyz, N.xyz);
