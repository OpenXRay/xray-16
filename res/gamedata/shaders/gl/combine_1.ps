//color = abs( gbd.N - gbd.N_org );
//		color = occ; // holger test
		//color = gbd.N;
        _out        	o;
        tonemap        	(o.low, o.high, color, tm_scale )	;
                        o.low.a         = skyblend	;
						o.high.a		= skyblend	;
//		o.low	= skyblend;
//		o.hight	= 0;

	//o.low = float4(gbd.P,1);

	//o.low = float4( 1.0f, 0.0f, 0.0f, 1.0f );

		return        	o;
